#include "stdafx.h"
#include <iostream>
#include<algorithm>
#include<string>
#include<cctype>
#include<cstddef>
using namespace std;

int main()
{
	string istr("hel34lo world 54dfasf f4g4g3 gf fdd43");
	cout << istr.size() << endl;
	
	
#if 0
	//istr.erase(std::unique(begin(istr), end(istr), myunique_istr),end(istr));

	//cout << istr << endl;

	auto p = std::find_if_not(begin(istr), end(istr), [](auto c) {return c == ' '; });
	//p++;
	*p = std::toupper(*p);
	
	while (p!=end(istr))
	{
		while (p != end(istr) && *p != ' ')
		{
			p++;
		}
#if 1
		if (p = std::find_if_not(p, end(istr), [](auto c) {return c == ' '; }); p != end(istr))
		{
			*p = std::toupper(*p);
		}
		if (p != end(istr))
		{
			p++;
		}
#endif
#if 0		
		while (p != end(istr) && *p==' ')
		{
			p++;
		}

		if (p != end(istr))
		{
			*p = std::toupper(*p);
		}
#endif
	}
#if 0
	while (p!=end(istr))
	{
		while (*p == ' ')
		{
			p++;
		}
		if (p = std::find(p + 1, end(istr), ' '); p != end(istr))
		{
			p++;
			*p = std::toupper(*p);
		}
	}
#endif 0
#endif
	cout << "fdfdf" << endl;
	cout << istr << endl;
    return 0;
}

